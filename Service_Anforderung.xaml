<UserControl x:Class="ServiceTool.Service_Anforderung"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceTool"
             mc:Ignorable="d" 
             d:DesignHeight="1200" d:DesignWidth="2100"
             Background="#FF969696">
    <UserControl.Resources>
        <!-- Stildefinition für alle Labels -->
        <Style TargetType="Label">
            <Setter Property="Background" Value="#B7D7B3"/>
        </Style>
    </UserControl.Resources>
    <ScrollViewer Margin="0,5,10,5" >
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <!--5-->
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <!--10-->
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <!--15-->
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.5"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="1.25*"/>
            </Grid.RowDefinitions>

            <!--ab hier werden die Labels und Textboxen etc definiert-->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" BorderBrush="Black" BorderThickness="2" Margin="0,0,0,15">
                <Label Content="Service Anforderung" FontSize="25" FontWeight="Bold"  VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Grid.ColumnSpan="4" Grid.Row="0" />
            </Border>
            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Auftragsnummer" FontSize="15" />
            </Border>
            <TextBox x:Name="tb_Auftragsnummer" FontSize="15" Grid.Row="2" Grid.Column="1" Focusable="False"/>

            <Border Grid.Row="4" Grid.Column="2" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="SB" FontSize="15"/>
            </Border>
            <TextBox x:Name="tb_SB" TabIndex="7" FontSize="15" Grid.Column="3" Grid.Row="4"/>

            <Border Grid.Row="3" Grid.Column="2" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="VI" FontSize="15" />
            </Border>
            <TextBox x:Name="tb_VI" TabIndex="6" FontSize="15" Grid.Row="3" Grid.Column="3" />

            <Border Grid.Row="3" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Druckdatum" FontSize="15"/>
            </Border>
            <DatePicker x:Name="dp_Druckdatum" FontSize="15" Grid.Row="3" Grid.Column="1" />

            <Border Grid.Row="5" Grid.Column="2" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Start des Besuchs" FontSize="15"/>
            </Border>
            <DatePicker x:Name="dp_Besuchsdatum_Start" TabIndex="8" FontSize="15" Grid.Row="5" Grid.Column="3" />

            <Border Grid.Row="6" Grid.Column="2" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Ende des Besuchs" FontSize="15"/>
            </Border>
            <DatePicker x:Name="dp_Besuchsdatum_Ende" TabIndex="9" FontSize="15" Grid.Row="6" Grid.Column="3" />

            <Border Grid.Row="4" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Servicetechniker" FontSize="15"/>
            </Border>
            <TextBox x:Name="tb_Servicetechniker_Anforderung" FontSize="15" Grid.Row="4" TabIndex="0" Grid.Column="1" TextChanged="tb_Servicetechniker_Anforderung_TextChanged" />

            <Border Grid.Row="5" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Kunde" FontSize="15"/>
            </Border>
            <TextBox x:Name="tb_Kunde_Anforderung" FontSize="15" Grid.Row="5" Grid.Column="1" TabIndex="1" TextChanged="tb_Kunde_Anforderung_TextChanged" />

            <Border Grid.Row="7" Grid.Column="2" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Einsatzort" FontSize="15"/>
            </Border>
            <TextBox x:Name="tb_Anschrift_1_Anforderung" TabIndex="10" FontSize="15" Grid.Row="7" Grid.Column="3" Text="Straße Hausnummer" TextChanged="tb_Anschrift_1_Anforderung_TextChanged"/>
            <TextBox x:Name="tb_Anschrift_2_Anforderung" TabIndex="11" FontSize="15" Grid.Row="8" Grid.Column="3" Text="PLZ Stadt" TextChanged="tb_Anschrift_2_Anforderung_TextChanged"/>

            <Border Grid.Row="9" Grid.Column="2" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Land" FontSize="15"/>
            </Border>

            <TextBox x:Name="tb_Land" TabIndex="12" FontSize="15" Grid.Row="9" Grid.Column="3" />

            <Border Grid.Row="6" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Kundennummer" FontSize="15"/>
            </Border>
            <TextBox x:Name="tb_KundenNr" Grid.Row="6" TabIndex="2" FontSize="15" Grid.Column="1"/>

            <Border Grid.Row="7" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Ansprechpartner" FontSize="15"/>
            </Border>
            <TextBox x:Name="tb_Ansprechpartner_Anforderung" TabIndex="3" FontSize="15" Grid.Row="7" Grid.Column="1" TextChanged="tb_Ansprechpartner_Anforderung_TextChanged" />

            <Border Grid.Row="8" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="End Kunde" FontSize="15"/>
            </Border>
            <TextBox x:Name="tb_End_Kunde" TabIndex="4" Grid.Row="8" Grid.Column="1" FontSize="15"/>

            <Border Grid.Row="9" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="End Kunde Kundennummer" FontSize="15"/>
            </Border>
            <TextBox x:Name="tb_EndKunde_KundenNR" TabIndex="5" Grid.Row="9" Grid.Column="1" FontSize="15"/>

            <Border Grid.Row="10" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1" Margin="0,15,0,0">
                <Label Content="Maschinentyp" FontSize="15"/>
            </Border>
            <ComboBox x:Name="cb_Maschinentyp_1" FontSize="15" Grid.Row="11" Grid.Column="0" SelectionChanged="Maschine_1_TypChanged">
                <ComboBoxItem Content="MRS"/>
                <ComboBoxItem Content="Jump"/>
                <ComboBoxItem Content="RSF"/>
                <ComboBoxItem Content="SFX"/>
                <ComboBoxItem Content="SF"/>
                <ComboBoxItem Content="SFXR"/>
                <ComboBoxItem Content="KSF"/>
                <ComboBoxItem Content="KSFx2"/>
                <ComboBoxItem Content="CSF"/>
                <ComboBoxItem Content="GAV"/>
                <ComboBoxItem Content="VIS"/>
                <ComboBoxItem Content="GV"/>
                <ComboBoxItem Content="HS"/>
                <ComboBoxItem Content="HSS"/>
                <ComboBoxItem Content="WF"/>
                <ComboBoxItem Content="WV"/>
                <ComboBoxItem Content="MS"/>
                <ComboBoxItem Content="MV"/>
                <ComboBoxItem Content="3C-RF"/>
            </ComboBox>
            <ComboBox x:Name="cb_Maschinentyp_2" SelectionChanged="Maschinen_vorhanden_2" FontSize="15" Grid.Row="12" Grid.Column="0">
                <ComboBoxItem Content="MRS"/>
                <ComboBoxItem Content="Jump"/>
                <ComboBoxItem Content="RSF"/>
                <ComboBoxItem Content="SFX"/>
                <ComboBoxItem Content="SF"/>
                <ComboBoxItem Content="SFXR"/>
                <ComboBoxItem Content="KSF"/>
                <ComboBoxItem Content="KSFx2"/>
                <ComboBoxItem Content="CSF"/>
                <ComboBoxItem Content="GAV"/>
                <ComboBoxItem Content="VIS"/>
                <ComboBoxItem Content="GV"/>
                <ComboBoxItem Content="HS"/>
                <ComboBoxItem Content="WF"/>
                <ComboBoxItem Content="WV"/>
                <ComboBoxItem Content="MS"/>
                <ComboBoxItem Content="MV"/>
                <ComboBoxItem Content="3C-RF"/>
            </ComboBox>
            <ComboBox x:Name="cb_Maschinentyp_3" FontSize="15" Grid.Row="13" Grid.Column="0" SelectionChanged="cb_Maschinentyp_3_TextChanged">
                <ComboBoxItem Content="MRS"/>
                <ComboBoxItem Content="Jump"/>
                <ComboBoxItem Content="RSF"/>
                <ComboBoxItem Content="SFX"/>
                <ComboBoxItem Content="SF"/>
                <ComboBoxItem Content="SFXR"/>
                <ComboBoxItem Content="KSF"/>
                <ComboBoxItem Content="KSFx2"/>
                <ComboBoxItem Content="CSF"/>
                <ComboBoxItem Content="GAV"/>
                <ComboBoxItem Content="VIS"/>
                <ComboBoxItem Content="GV"/>
                <ComboBoxItem Content="HS"/>
                <ComboBoxItem Content="WF"/>
                <ComboBoxItem Content="WV"/>
                <ComboBoxItem Content="MS"/>
                <ComboBoxItem Content="MV"/>
                <ComboBoxItem Content="3C-RF"/>
            </ComboBox>
            <ComboBox x:Name="cb_Maschinentyp_4" FontSize="15" Grid.Row="14" Grid.Column="0" SelectionChanged="cb_Maschinentyp_4_TextChanged">
                <ComboBoxItem Content="MRS"/>
                <ComboBoxItem Content="Jump"/>
                <ComboBoxItem Content="RSF"/>
                <ComboBoxItem Content="SFX"/>
                <ComboBoxItem Content="SF"/>
                <ComboBoxItem Content="SFXR"/>
                <ComboBoxItem Content="KSF"/>
                <ComboBoxItem Content="KSFx2"/>
                <ComboBoxItem Content="CSF"/>
                <ComboBoxItem Content="GAV"/>
                <ComboBoxItem Content="VIS"/>
                <ComboBoxItem Content="GV"/>
                <ComboBoxItem Content="HS"/>
                <ComboBoxItem Content="WF"/>
                <ComboBoxItem Content="WV"/>
                <ComboBoxItem Content="MS"/>
                <ComboBoxItem Content="MV"/>
                <ComboBoxItem Content="3C-RF"/>
            </ComboBox>

            <Border Grid.Row="10" Grid.Column="1" BorderBrush="Black" BorderThickness="1,1,1,1" Margin="0,15,0,0">
                <Label Content="Baugröße" FontSize="15"/>
            </Border>
            <ComboBox x:Name="cb_BauGröße_1" FontSize="15" Grid.Row="11" Grid.Column="1" />
            <ComboBox x:Name="cb_BauGröße_2" FontSize="15" Grid.Row="12" Grid.Column="1" />
            <ComboBox x:Name="cb_BauGröße_3" FontSize="15" Grid.Row="13" Grid.Column="1" />
            <ComboBox x:Name="cb_BauGröße_4" FontSize="15" Grid.Row="14" Grid.Column="1" />

            <Border Grid.Row="10" Grid.Column="2" BorderBrush="Black" BorderThickness="1,1,1,1" Margin="0,15,0,0">
                <Label Content="Masch.-Nr." FontSize="15"  />
            </Border>
            <TextBox x:Name="tb_MaschNr_1" FontSize="15" TabIndex="13" Grid.Row="11" Grid.Column="2" LostFocus="tb_MaNr1_LostFocus"/>
            <TextBox x:Name="tb_MaschNr_2" FontSize="15" TabIndex="14" Grid.Row="12" Grid.Column="2" LostFocus="tb_MaNr2_LostFocus"/>
            <TextBox x:Name="tb_MaschNr_3" FontSize="15" TabIndex="15" Grid.Row="13" Grid.Column="2" LostFocus="tb_MaNr3_LostFocus"/>
            <TextBox x:Name="tb_MaschNr_4" FontSize="15" TabIndex="16" Grid.Row="14" Grid.Column="2" LostFocus="tb_MaNr4_LostFocus"/>

            <Border Grid.Row="10" Grid.Column="3" BorderBrush="Black" BorderThickness="1,1,1,1" Margin="0,15,0,0">
                <Label Content="Auslieferung (MM.JJ)" FontSize="15"  />
            </Border>
            <TextBox x:Name="tb_Auslieferung_1" FontSize="15" TabIndex="17" Grid.Row="11" Grid.Column="3" />
            <TextBox x:Name="tb_Auslieferung_2" FontSize="15" TabIndex="18" Grid.Row="12" Grid.Column="3" />
            <TextBox x:Name="tb_Auslieferung_3" FontSize="15" TabIndex="19" Grid.Row="13" Grid.Column="3" />
            <TextBox x:Name="tb_Auslieferung_4" FontSize="15" TabIndex="20" Grid.Row="14" Grid.Column="3" />

            <Border Grid.Row="16" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1" Margin="0,15,0,0">
                <Label Content="Material" FontSize="15"  />
            </Border>
            <TextBox x:Name="tb_Material" FontSize="15" Grid.Row="16" TabIndex="21" Grid.Column="1" Margin="0,15,0,0"/>

            <Border Grid.Row="16" Grid.Column="2" BorderBrush="Black" BorderThickness="1,1,1,1" Margin="0,15,0,0">
                <Label Content="Endprodukt" FontSize="15"  />
            </Border>
            <TextBox x:Name="tb_Endprodukt" FontSize="15" Grid.Row="16" TabIndex="22" Grid.Column="3" Margin="0,15,0,0"/>

            <Border Grid.Row="17" Grid.Column="2" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Recyclateinsatz" FontSize="15"  />
            </Border>
            
            <TextBox x:Name="tb_Recyclateinsatz" FontSize="15" TabIndex="23" Grid.Row="17" Grid.Column="3" />

            <Border Grid.Row="20" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Anreise" FontSize="15"  />
            </Border>
            <ComboBox x:Name="cb_Anreise" Grid.Row="20" Grid.Column="1" SelectionChanged="cb_Anreise_SelectionChanged">
                <ComboBoxItem IsSelected="True">-bitte auswählen-</ComboBoxItem>
                <ComboBoxItem>PKW</ComboBoxItem>
                <ComboBoxItem>Flugzeug</ComboBoxItem>
                <ComboBoxItem>Bahn</ComboBoxItem>
            </ComboBox>

            <Border Grid.Row="21" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Melden bei" FontSize="15"  />
            </Border>
            <TextBox x:Name="tb_melden_bei" TabIndex="24" FontSize="15" Grid.Row="21" Grid.Column="1" />

            <Border Grid.Row="22" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Wann" FontSize="15"  />
            </Border>
            <TextBox x:Name="tb_wann" FontSize="15" TabIndex="25" Grid.Row="22" Grid.Column="1" />

            <Border Grid.Row="23" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Besuchsgrund" FontSize="15"  />
            </Border>
            <ComboBox x:Name="cb_Besuchsgrund" Grid.Row="23" Grid.Column="1">
                <ComboBoxItem IsSelected="True">-bitte auswählen-</ComboBoxItem>
                <ComboBoxItem>Inbetriebnahme</ComboBoxItem>
                <ComboBoxItem>Funktionsstörung</ComboBoxItem>
                <ComboBoxItem>After-Sales-Service</ComboBoxItem>
                <ComboBoxItem>Produktionsumstellung</ComboBoxItem>
                <ComboBoxItem>Sonstiges</ComboBoxItem>
            </ComboBox>

            <Border Grid.Row="24" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1">
                <Label Content="Kostenübernahme" FontSize="15"  />
            </Border>
            <ComboBox x:Name="cb_Kostenübernahme" Grid.Row="24" Grid.Column="1">
                <ComboBoxItem IsSelected="True">-bitte auswählen-</ComboBoxItem>
                <ComboBoxItem>GKT</ComboBoxItem>
                <ComboBoxItem>Kunde</ComboBoxItem>
                <ComboBoxItem>Garantie Kulanz</ComboBoxItem>
                <ComboBoxItem> zu entscheiden</ComboBoxItem>
            </ComboBox>

            <Border Grid.Row="26" Grid.Column="0" Grid.ColumnSpan="4" BorderBrush="Black" BorderThickness="1" >
                <Label Content="Begleitende WA, benötigte Teile/Sonderwerkzeuge" FontSize="15"   HorizontalContentAlignment="Center"/>
            </Border>
            <TextBox x:Name="tb_Teile_Sonderwerkzeuge" TabIndex="26" FontSize="15" Grid.Row="27" Grid.Column="0" Grid.ColumnSpan="4" />
            <TextBox x:Name="tb_Teile_Sonderwerkzeuge2" TabIndex="27" FontSize="15" Grid.Row="28" Grid.Column="0" Grid.ColumnSpan="4" />

            <Border Grid.Row="29" Grid.Column="0" Grid.ColumnSpan="4" BorderBrush="Black" BorderThickness="1" Margin="0,15,0,0">
                <Label Content="Aufgabenstellung" FontSize="15"   HorizontalContentAlignment="Center"/>
            </Border>
            <TextBox x:Name="tb_Aufgabenstellung_1" TabIndex="28" FontSize="15" Grid.Row="30" Grid.Column="0" Grid.ColumnSpan="4" />
            <TextBox x:Name="tb_Aufgabenstellung_2" TabIndex="29" FontSize="15" Grid.Row="31" Grid.Column="0" Grid.ColumnSpan="4" />
            <TextBox x:Name="tb_Aufgabenstellung_3" TabIndex="30" FontSize="15" Grid.Row="32" Grid.Column="0" Grid.ColumnSpan="4" />

            <Border Grid.Row="33" Grid.Column="0" Grid.ColumnSpan="4" BorderBrush="Black" BorderThickness="1" Margin="0,15,0,0">
                <Label Content="Geplante Durchführung Zeitablauf" FontSize="15"   HorizontalContentAlignment="Center"/>
            </Border>
            <TextBox Name="tb_Durchfuehrung" TabIndex="31" FontSize="15" TextWrapping="Wrap" AcceptsReturn="True" Height="200" VerticalScrollBarVisibility="Visible" Grid.Row="34" Grid.ColumnSpan="4" Grid.RowSpan="6" Margin="0,0,0,20"/>


        </Grid>
    </ScrollViewer>
</UserControl>
